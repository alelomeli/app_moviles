<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="719dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banda"
                    android:layout_width="385dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bandasresistencia" />

                <TextView
                    android:id="@+id/txtbanda"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Bandas elásticas. Herramienta versátil para entrenamientos de resistencia. Ideales para tonificar músculos, mejorar flexibilidad y rehabilitación."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cuerda"
                    android:layout_width="385dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cuerda" />

                <TextView
                    android:id="@+id/txtcuerda"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text=" Cuerda de Saltar. Accesorio esencial para entrenamientos cardiovasculares. Perfecta para mejorar la coordinación, quemar calorías y fortalecer piernas."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/guantes"
                    android:layout_width="389dp"
                    android:layout_height="98dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/guantes" />

                <TextView
                    android:id="@+id/txtguantes"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Guantes. Diseñados para proteger tus manos durante levantamientos de peso y ejercicios de alta intensidad."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mochila"
                    android:layout_width="390dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mochila" />

                <TextView
                    android:id="@+id/txtmochila"
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mochila. Espaciosa y resistente, ideal para transportar tu equipo deportivo. Cuenta con múltiples compartimentos para mantener todo organizado"
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rueda"
                    android:layout_width="390dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rueda" />

                <TextView
                    android:id="@+id/txtrueda"
                    android:layout_width="wrap_content"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Rueda para abdominales. Herramienta efectiva para fortalecer el núcleo, mejorar la postura y tonificar abdominales."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shaker"
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/shaker" />

                <TextView
                    android:id="@+id/txtshaker"
                    android:layout_width="wrap_content"
                    android:layout_height="126dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Shaker. Botella mezcladora para preparar y transportar tus batidos de proteínas o suplementos. Diseñada con un sistema anti-fugas."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/straps"
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/straps" />

                <TextView
                    android:id="@+id/txtstrap"
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Straps. Correas de levantamiento que mejoran el agarre durante entrenamientos con pesas. Ayudan a reducir la tensión en las manos y aumentar el rendimiento en ejercicios de tracción."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tapete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/tapateyoga" />

                <TextView
                    android:id="@+id/txttapete"
                    android:layout_width="430dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tapete. Superficie acolchada y antideslizante para realizar ejercicios de yoga, pilates o estiramientos."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tobillera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/tobilleras" />

                <TextView
                    android:id="@+id/txttobillera"
                    android:layout_width="422dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tobilleras con peso. Accesorio ideal para añadir resistencia a tus entrenamientos. Fortalece piernas y glúteos mientras caminas, corres o realizas ejercicios específicos."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnAgregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/button_margin"
                    android:backgroundTint="#858AE3"
                    app:srcCompat="@drawable/baseline_add_24" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>