<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="719dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina1"
                    android:layout_width="385dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina1" />

                <TextView
                    android:id="@+id/txtproteina1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Una de las proteínas más vendidas del mercado. Contiene 24g de proteína por porción, baja en grasas y carbohidratos, y fácil de digerir."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina2"
                    android:layout_width="385dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina2" />

                <TextView
                    android:id="@+id/txtproteina2"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Creatina monohidratada pura, diseñada para mejorar la fuerza, el rendimiento y el crecimiento muscular. Excelente relación calidad-precio."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina3"
                    android:layout_width="390dp"
                    android:layout_height="124dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina3" />

                <TextView
                    android:id="@+id/txtproteina3"
                    android:layout_width="wrap_content"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Mezcla de BCAA con electrolitos añadidos para mejorar la hidratación, reducir la fatiga muscular y acelerar la recuperación. Sin azúcar y con varios sabores."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina4"
                    android:layout_width="390dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina4" />

                <TextView
                    android:id="@+id/txtproteina4"
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Glutamina en polvo diseñada para acelerar la recuperación muscular y proteger contra el desgaste muscular."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina5"
                    android:layout_width="390dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina5" />

                <TextView
                    android:id="@+id/txtproteina5"
                    android:layout_width="wrap_content"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Pre-entrenamiento con cafeína, beta-alanina y arginina para aumentar la energía, la resistencia y la concentración. Popular por su sabor y efectividad."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina6"
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina6" />

                <TextView
                    android:id="@+id/txtproteina6"
                    android:layout_width="wrap_content"
                    android:layout_height="126dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Suplemento premium de Omega-3, con alta concentración de EPA y DHA. Mejora la salud cardiovascular y reduce la inflamación muscular."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina7"
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina7" />

                <TextView
                    android:id="@+id/txtproteina7"
                    android:layout_width="wrap_content"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text=" Fórmulas multivitamínicas diseñadas específicamente para atletas, con vitaminas, minerales y antioxidantes esenciales."
                    android:textColor="#4E148C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina8" />

                <TextView
                    android:id="@+id/txtproteina8"
                    android:layout_width="430dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-medium"
                    android:text="Proteína de liberación lenta, ideal para el consumo nocturno. Contiene 25g de proteína por porción y ayuda a la recuperación muscular durante el sueño."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/proteina9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/proteina9" />

                <TextView
                    android:id="@+id/txtproteina9"
                    android:layout_width="422dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Ganador de peso con 1,250 calorías por porción, 50g de proteína y una mezcla de carbohidratos complejos. Ideal para quienes buscan ganar masa muscular rápidamente."
                    android:textColor="#4E148C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/button_margin"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnAgregarSuplemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#858AE3"
                    android:src="@drawable/baseline_add_24" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

</androidx.constraintlayout.widget.ConstraintLayout>